<wg_spt_facingleaves.xml>
	<elements>
		<!-- pos0 --> 
		<POSITION>
			<semanticIndex> 0 </semanticIndex>
			<type> FLOAT3 </type>
		</POSITION>
		<!-- pos1 - leaf card corner --> 
		<POSITION>
			<semanticIndex> 1 </semanticIndex>
			<type> FLOAT3 </type>
		</POSITION>
		<!-- tex0
		xy - texcoords,
		z - leaf card LoD,
		w - leaf card self shadow offset --> 
		<TEXCOORD>
			<semanticIndex> 0 </semanticIndex>
			<type> FLOAT4 </type>
		</TEXCOORD>
		<!-- tex1 - wind branch data -->
		<TEXCOORD>
			<semanticIndex> 1 </semanticIndex>
			<type> FLOAT4 </type>
		</TEXCOORD>
		<!-- tex2 - xyz - wind extra data, w - wind flags -->
		<TEXCOORD>
			<semanticIndex> 2 </semanticIndex>
			<type> FLOAT4 </type>
		</TEXCOORD>
		<!-- norm - xyz - normal, w - ambient occlusion -->
		<NORMAL>
			<type> FLOAT4 </type>
		</NORMAL>
		<!-- tangent -->
		<TANGENT>
			<type> FLOAT3 </type>
		</TANGENT>
	</elements>
</wg_spt_facingleaves.xml>

